    {name: "Bob",country:  "USA",age: 21}
];

/*Task 7.4  Filter the array for those whose country is either India or USA. 
Also find and findIndex the first JSON whose country is either India or USA.*/


 //filter

let belongsTo=employee.filter(function(emp){
    return emp.country=='India' || emp.country=='USA';
  });
console.log(' belongsToInd: ',belongsTo);

//find first & findIndex
let belongsTo_f=employee.find(function(emp){
    return emp.country=='India' || emp.country=='USA';
  });
  let belongsTo_i=employee.findIndex(function(emp){
    return emp.country=='India' || emp.country=='USA';
  });
  console.log('belongsTo_f: ',belongsTo_f,' Index: ',belongsTo_i);

//Given an array as input, convert all odd numbers in the array to the nearest even number greater than it. Also, print the array.



function makeArray(arr)
{
    
    for (let i = 0; i < arr.length; i++)
    if(arr[i]%2==0)
    {
        arr[i]= arr[i];
    }
    else
    {
        arr[i] = arr[i]+1;
    }
 
   console.log(arr);
}
const arr =[5,18,23,30];

    makeArray(arr);
    
    
    O/P=  [ 6, 18, 24, 30 ]
